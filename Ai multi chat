/**
 * server.js (static serving enabled)
 * Place frontend files in ./public (index.html, styles.css, app.js)
 */

import express from 'express';
import cors from 'cors';
import dotenv from 'dotenv';
import path from 'path';

dotenv.config();

const app = express();
const PORT = process.env.PORT || 3000;
const ALLOWED_ORIGINS = (process.env.ALLOWED_ORIGINS || '*').split(',');

app.use(express.json({ limit: '1mb' }));
app.use(express.urlencoded({ extended: true }));

app.use(cors({
  origin: (origin, cb) => {
    if (!origin) return cb(null, true);
    if (ALLOWED_ORIGINS.includes('*') || ALLOWED_ORIGINS.includes(origin)) return cb(null, true);
    cb(new Error('CORS origin not allowed'));
  }
}));

// Serve static frontend from ./public
const publicDir = path.join(process.cwd(), 'public');
app.use(express.static(publicDir));

// Keep your API routes below
app.post('/api/chat', async (req, res) => {
  // ... your existing logic for /api/chat ...
  res.setHeader('Content-Type', 'text/plain; charset=utf-8');
  res.write('This is a placeholder response. Replace with your provider streaming logic.');
  res.end();
});

app.post('/api/chat-sync', async (req, res) => {
  // ... existing sync logic ...
  res.json({ text: 'placeholder full response' });
});

// Fallback: serve index.html for any other GET (for SPA routing)
app.get('*', (req, res) => {
  res.sendFile(path.join(publicDir, 'index.html'));
});

app.listen(PORT, () => {
  console.log(`Server listening on http://localhost:${PORT}`);
});
